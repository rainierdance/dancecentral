<?xml version="1.0" encoding="UTF-8"?>
<Module>
<ModulePrefs title="DanceCentral.info Video Clips" />
<UserPref name="query" display_name="Query" default_value=""/>
<Content type="html"><![CDATA[
<head>
  <base target="_top" />
  <LINK REL=StyleSheet HREF="http://dancecentral.googlecode.com/svn/trunk/videos/dci_video.css" TYPE="text/css"/>
  <LINK REL=StyleSheet HREF="http://dancecentral.googlecode.com/svn/trunk/videos/../figures/figures.css" TYPE="text/css"/>

  <script type="text/javascript">
    //-------------------------------------------
    // globals
    var IS_GADGET = true; 
    var VERSION = "10.0330.1806";
    var ID_ANALYTICS = "UA-9375974-3";

    var inputQuery = '';

    if (IS_GADGET) {
      // does gadget specific initialization
      inputQuery= '__UP_query__';
    }

    var danceVideos = [];

    function onLoad() {
      if (!IS_GADGET) {
        var paramValue = getURLParam('query');
        if (paramValue) inputQuery = paramValue;
      }

      document.getElementById('query').value = inputQuery;
 
      initVideos();
      updateVideoResult();

      document.getElementById('divVersion').innerHTML = VERSION;
    }
  </script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/dci_video.js"></script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/../utils/utils.js"></script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/waltz_video.js"></script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/vwaltz_video.js"></script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/tango_video.js"></script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/foxtrot_video.js"></script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/quickstep_video.js"></script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/rumba_video.js"></script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/chacha_video.js"></script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/samba_video.js"></script>
  <script type="text/javascript" SRC="http://dancecentral.googlecode.com/svn/trunk/videos/ballroom_video.js"></script>

</head>

<body onLoad="onLoad()">

<form id ='idSearchForm' onsubmit="updateVideoResult(); getElementById('query').select(); return false;">
<input type=text id='query' value='' size=40 onFocus='this.select();'>
<input type=button value="Search Video Clips!" onclick='updateVideoResult();'>
</form>

<table>
<tr><td>
<div id='divList'></div>
</td><td>
<div id='divPlayer'></div>
</td></tr>
</table>

<pre id='debugOutput' style='display:inline'></pre>
<div id='divVersion'></div>

</body> 

]]></Content>
</Module>

